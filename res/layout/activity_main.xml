<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainlayout"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/car" />

    <LinearLayout
        android:id="@+id/engine_layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/myborder"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/engineBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/carImage"
            android:layout_alignTop="@+id/carImage"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:src="@drawable/engine" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exterior_layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/myborder"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/exteriorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:src="@drawable/exterior" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/power_layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/myborder"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/powerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:src="@drawable/power" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/interior_layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/myborder"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/interiorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:src="@drawable/interior" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/document_layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="730dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/myborder"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/documentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:src="@drawable/document" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/setting_layoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="980dp"
        android:layout_marginTop="-50dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/settingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:src="@drawable/setting" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/engineLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <fragment
            android:id="@+id/engine_fm"
            android:name="com.example.nativecarchecklist.Engine"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content" />
        
        <fragment 
           android:id="@+id/enginesub_fm"
           android:name="com.example.nativecarchecklist.EngineSub"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="1100dp" />
        
        <fragment
            android:id="@+id/power_fm"
            android:name="com.example.nativecarchecklist.Power"
            android:layout_width="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_height="wrap_content" />
        
        <fragment
            android:id="@+id/exterior_fm"
            android:name="com.example.nativecarchecklist.Exterior"
            android:layout_width="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_height="wrap_content" />
        
        <fragment 
            android:id="@+id/interior_fm"
            android:name="com.example.nativecarchecklist.Interior"
            android:layout_width="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content" />
        
        <fragment 
            android:id="@+id/document_fm"
            android:name="com.example.nativecarchecklist.Document"
            android:layout_marginTop="210dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>